<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="quiz-container">
    <h1>Question <%= questionIndex + 1 %> of <%= totalQuestions %></h1>
    
    <p class="question-text"><%= question.questionText %></p>

    <form action="/quiz" method="POST">
      <div class="options">
        <% question.options.forEach((option) => { %>
          <label>
            <input type="radio" name="answer" value="<%= option.optionKey %>">
            <span class="option-label"><%= option.optionKey %>: <%= option.optionText %></span>
          </label><br>
        <% }); %>
      </div>
      
      <button type="submit">Next</button>
    </form>

    <button onclick="window.location.href='/finish';">Finish Anytime</button>
  </div>
</body>
</html>
